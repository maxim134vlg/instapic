<div class="card col-sm-6">
  <div class="card-body text-center">
<p>
	<%= image_tag @photo.image.url(:medium) %>
	<p>
	  <strong class="card-title"><%= @photo.description %></strong>
	</p>
	<strong>User email:</strong>
	<%= @photo.user.email if @photo.user %>		
</p>

<hr>

<% if @photo.user == current_user %><%= link_to 'Edit', edit_photo_path(@photo), class: "btn btn-primary" %> |<%end%>
<%= link_to 'Back', photos_path, class: "btn btn-primary" %>
</div>
</div>