<%= link_to "Subscribe", subscribe_profile_path(@user) %>
<%= link_to "Unsubscribe", subscribe_profile_path(@user) %>
<% @photos.each do |photo| %>
  <div class="card text-center float-right" style="width: 20rem;">
    <%= image_tag photo.image.url(:medium) %>
    <div class="card-body">
      <h5 class="card-title"><%= photo.description %></h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <%= link_to photo.user.email, profile_path(photo.user_id) if photo.user %> <br>
          <%= link_to 'Show', photo, class: "btn btn-primary" %>
          <% if photo.user == current_user %>
         | <%= link_to 'Edit', edit_photo_path(photo), class: "btn btn-primary" %> |<br>
          <% end %>
          <% if photo.user == current_user %>
          <%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
          <% end %>   
    </div>
  </div>
<% end %>